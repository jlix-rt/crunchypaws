# =============================================
# CONFIGURACIÓN DE ENTORNO - ECOMMERCE BACKEND
# =============================================

# Servidor
NODE_ENV=development
PORT=3001

# Base de datos
DATABASE_URL=mysql://appuser:apppassword@localhost:3306/crunchypaws
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=appuser
DB_PASSWORD=apppassword
DB_DATABASE=crunchypaws

# JWT
JWT_SECRET=ecommerce-jwt-secret-key-2024
JWT_REFRESH_SECRET=ecommerce-refresh-secret-key-2024
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:80

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@crunchypaws.com

# Redes sociales
SOCIAL_WHATSAPP_BASE_URL=https://api.whatsapp.com/send?phone=50212345678
FACEBOOK_MESSENGER_DEEPLINK=https://m.me/crunchypaws

# FEL (Facturación Electrónica Guatemala)
FEL_PROVIDER_URL=https://api.fel.gt/stub
FEL_PROVIDER_TOKEN=fel-stub-token
FEL_PROVIDER_USERNAME=fel-username
FEL_PROVIDER_PASSWORD=fel-password

# Pagos
PAYMENT_PROVIDER_URL=https://api.payments.gt/stub
PAYMENT_PROVIDER_TOKEN=payment-stub-token

# Uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log




