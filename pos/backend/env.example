# =============================================
# CONFIGURACIÓN DE ENTORNO - POS BACKEND
# =============================================

# Servidor
NODE_ENV=development
PORT=3002

# Base de datos
DATABASE_URL=mysql://appuser:apppassword@localhost:3306/crunchypaws
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=appuser
DB_PASSWORD=apppassword
DB_DATABASE=crunchypaws

# JWT
JWT_SECRET=pos-jwt-secret-key-2024
JWT_REFRESH_SECRET=pos-refresh-secret-key-2024
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:4201,http://localhost:80

# WebSocket
WS_PORT=3002

# Redes sociales
SOCIAL_WHATSAPP_BASE_URL=https://api.whatsapp.com/send?phone=50212345678
FACEBOOK_MESSENGER_DEEPLINK=https://m.me/crunchypaws

# Impresoras
PRINTER_THERMAL_URL=http://localhost:9100
PRINTER_THERMAL_ENABLED=false

# Lectores de código de barras
BARCODE_SCANNER_ENABLED=false
BARCODE_SCANNER_PORT=COM3

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/pos.log



