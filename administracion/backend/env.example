# Configuración del servidor
PORT=3003
NODE_ENV=development

# Configuración de la base de datos
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=appuser
DB_PASSWORD=apppassword
DB_DATABASE=crunchypaws

# Configuración JWT
JWT_SECRET=admin-jwt-secret-key-2024-crunchypaws
JWT_REFRESH_SECRET=admin-refresh-secret-key-2024-crunchypaws
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración CORS
CORS_ORIGIN=http://localhost:4202,http://localhost:80

# Configuración FEL (Facturación Electrónica)
FEL_PROVIDER_URL=https://api.fel.gt/stub
FEL_PROVIDER_TOKEN=fel-stub-token
FEL_PROVIDER_USERNAME=fel-username
FEL_PROVIDER_PASSWORD=fel-password

# Configuración de email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@crunchypaws.com
SMTP_PASS=admin-app-password
EMAIL_FROM=noreply@crunchypaws.com

# Configuración de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=./logs/admin.log