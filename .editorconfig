root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.sql]
indent_size = 2

[*.{ts,js}]
indent_size = 2

[*.{scss,css}]
indent_size = 2

[*.html]
indent_size = 2

[*.{sh,bat}]
end_of_line = lf




